  <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
    <item name="android:background">@color/yellow</item>
    <item name="colorAccent">@color/black</item>
    <item name="android:textColorPrimary">#FFFFFF</item>
  </style>
</resources>
